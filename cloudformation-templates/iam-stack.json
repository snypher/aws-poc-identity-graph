{
  "Description": "IAM resources for the Identity Graph PoC",
  "Parameters": {
    "InfrastructureID": {
      "Description": "Infrastructure ID",
      "Type": "String",
      "AllowedPattern": "[-a-z0-9]+",
      "MaxLength": 50,
      "Default": "poc-identity-graph"
    },
    "S3PoCBucketName": {
			"Description": "Name of the S3 bucket with the PoC's datasets and other artifacts",
			"Type": "String",
			"AllowedPattern": "^[a-z0-9][a-z0-9.-][a-z0-9.-].+",
			"ConstraintDescription": "Malformed input-Parameter S3PoCBucketName. It must contain a value that satisfy the S3 Bucket naming rules specified in the below Amazon S3 User Guide link https://docs.aws.amazon.com/AmazonS3/latest/userguide/bucketnamingrules.html",
			"MinLength": 3,
			"MaxLength": 63
		}
  },
  "Resources": {
    "NeptuneEC2ClientRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "ec2.amazonaws.com"
                ]
              },
              "Action": [
                "sts:AssumeRole"
              ]
            }
          ]
        },
        "RoleName": {
          "Fn::Join": [
            "",
            [
              "NeptuneEC2ClientRole-",
              { 
                "Fn::Sub": "${InfrastructureID}-"
              },
              {
                "Ref": "AWS::Region"
              }
            ]
          ]
        },
        "Tags": [
          {
            "Key": "Environment",
            "Value": {
              "Fn::Sub": "${InfrastructureID}"
            }
          },
          {
            "Key": "auto-delete",
            "Value": "never"
          }
        ],
        "Path": "/"
      }
    },
    "NeptuneAccessPolicy": {
      "Type": "AWS::IAM::Policy",
      "Properties": {
        "PolicyName": { 
          "Fn::Sub": "NeptuneAccessPolicy-${InfrastructureID}"
        },
        "PolicyDocument": {
          "Statement": [
            {
              "Effect": "Allow",
              "Action": [
                "rds:*",
                "iam:GetAccountSummary",
                "iam:ListAccountAliases",
                "iam:PassRole"
              ],
              "Resource": "*"
            }
          ]
        },
        "Roles": [
          {
            "Ref": "NeptuneEC2ClientRole"
          }
        ]
      }
    },
    "S3AccessPolicy": {
      "Type": "AWS::IAM::Policy",
      "Properties": {
        "PolicyName": { 
          "Fn::Sub": "S3AccessPolicy-${InfrastructureID}"
        },
        "PolicyDocument": {
          "Statement": [
            {
							"Effect": "Allow",
							"Action": [
								"s3:Get*",
								"s3:List*"
							],
							"Resource": {
								"Fn::Sub": "arn:${AWS::Partition}:s3:::*"
							}
						},
						{
							"Effect": "Allow",
							"Action": [
								"s3:PutObject"
							],
							"Resource": {
								"Fn::Sub": "arn:${AWS::Partition}:s3:::${S3PoCBucketName}",
								"Fn::Sub": "arn:${AWS::Partition}:s3:::${S3PoCBucketName}/*"
							}
						}
          ]
        },
        "Roles": [
          {
            "Ref": "NeptuneEC2ClientRole"
          }
        ]
      }
    },
    "NeptuneEC2InstanceProfile": {
      "Type": "AWS::IAM::InstanceProfile",
      "Properties": {
        "InstanceProfileName": {
          "Fn::Sub": "NeptuneEC2InstanceProfile-${InfrastructureID}"
        },
        "Path": "/",
        "Roles": [
          {
            "Ref": "NeptuneEC2ClientRole"
          }
        ]
      },
      "DependsOn": [
        "NeptuneEC2ClientRole"
      ]
    },
    "NeptuneIAMAuthPolicy": {
      "Type": "AWS::IAM::Policy",
      "Properties": {
        "PolicyName": {
          "Fn::Sub": "NeptuneIAMAuthPolicy-${InfrastructureID}"
        },
        "PolicyDocument": {
          "Statement": [
            {
              "Effect": "Allow",
              "Action": [
                "neptune-db:*"
              ],
              "Resource": {
                "Fn::Join": [
                  "",
                  [
                    "arn:aws:neptune-db:",
                    {
                      "Ref": "AWS::Region"
                    },
                    ":",
                    {
                      "Ref": "AWS::AccountId"
                    },
                    ":*/*"
                  ]
                ]
              }
            }
          ]
        },
        "Roles": [
          {
            "Ref": "NeptuneEC2ClientRole"
          }
        ]
      }
    },
    "NeptuneLoadFromS3Role": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "rds.amazonaws.com"
                ]
              },
              "Action": [
                "sts:AssumeRole"
              ]
            }
          ]
        },
        "RoleName": {
          "Fn::Join": [
            "",
            [
              "NeptuneLoadFromS3Role-",
              { 
                "Fn::Sub": "${InfrastructureID}-"
              },
              {
                "Ref": "AWS::Region"
              }
            ]
          ]
        },
        "Tags": [
          {
            "Key": "Environment",
            "Value": {
              "Fn::Sub": "${InfrastructureID}"
            }
          },
          {
            "Key": "auto-delete",
            "Value": "never"
          }
        ],
        "Path": "/"
      }
    },
    "NeptuneLoadFromS3Policy": {
      "Type": "AWS::IAM::Policy",
      "Properties": {
        "PolicyName": {
          "Fn::Sub": "NeptuneLoadFromS3Policy-${InfrastructureID}"
        },
        "PolicyDocument": {
          "Statement": [
            {
              "Effect": "Allow",
              "Action": [
                "s3:Get*",
                "s3:List*"
              ],
              "Resource": "*"
            }
          ]
        },
        "Roles": [
          {
            "Ref": "NeptuneLoadFromS3Role"
          }
        ]
      }
    },
    "GlueRole": {
			"Type": "AWS::IAM::Role",
			"Properties": {
				"AssumeRolePolicyDocument": {
					"Version": "2012-10-17",
					"Statement": [
						{
							"Effect": "Allow",
							"Principal": {
								"Service": "glue.amazonaws.com"
							},
							"Action": "sts:AssumeRole"
						}
					]
				},
				"RoleName": {
          "Fn::Join": [
            "",
            [
              "GlueRole-",
              { 
                "Fn::Sub": "${InfrastructureID}-"
              },
              {
                "Ref": "AWS::Region"
              }
            ]
          ]
        },
				"ManagedPolicyArns": [
					"arn:aws:iam::aws:policy/AmazonS3FullAccess",
					"arn:aws:iam::aws:policy/service-role/AWSGlueServiceRole"
				],
				"Policies": [
					{
						"PolicyName": { 
						  "Fn::Sub": "GlueAssumeRolePolicy-${InfrastructureID}"
						},
						"PolicyDocument": {
							"Version": "2012-10-17",
							"Statement": [
								{
									"Effect": "Allow",
									"Action": "sts:AssumeRole",
									"Resource": {
										"Fn::Sub": "arn:${AWS::Partition}:iam::${AWS::AccountId}:role/GlueConnectToNeptuneRole*"
									}
								}
							]
						}
					}
				],
				"Tags": [
          {
            "Key": "Environment",
            "Value": {
              "Fn::Sub": "${InfrastructureID}"
            }
          },
          {
            "Key": "auto-delete",
            "Value": "never"
          }
        ],
				"MaxSessionDuration": 43200
			}
		},
		"SageMakerExecutionRole": {
			"Type": "AWS::IAM::Role",
			"Properties": {
				"AssumeRolePolicyDocument": {
					"Version": "2012-10-17",
					"Statement": [
						{
							"Effect": "Allow",
							"Principal": {
								"Service": [
									"sagemaker.amazonaws.com"
								]
							},
							"Action": [
								"sts:AssumeRole"
							]
						}
					]
				},
				"Path": "/",
				"Policies": [
					{
						"PolicyName": { 
						  "Fn::Sub": "SageMakerExecutionPolicy-${InfrastructureID}" 
						},
						"PolicyDocument": {
							"Version": "2012-10-17",
							"Statement": [
								{
									"Effect": "Allow",
									"Action": [
										"cloudwatch:PutMetricData"
									],
									"Resource": {
										"Fn::Sub": "arn:${AWS::Partition}:cloudwatch:${AWS::Region}:${AWS::AccountId}:*"
									}
								},
								{
									"Effect": "Allow",
									"Action": [
										"logs:CreateLogGroup",
										"logs:CreateLogStream",
										"logs:DescribeLogStreams",
										"logs:PutLogEvents",
										"logs:GetLogEvents"
									],
									"Resource": {
										"Fn::Sub": "arn:${AWS::Partition}:logs:${AWS::Region}:${AWS::AccountId}:*"
									}
								},
								{
									"Effect": "Allow",
									"Action": "neptune-db:connect",
									"Resource": {
										"Fn::Sub": "arn:${AWS::Partition}:neptune-db:${AWS::Region}:${AWS::AccountId}:*/*"
									}
								},
								{
									"Effect": "Allow",
									"Action": "glue:*",
									"Resource": {
										"Fn::Sub": "arn:${AWS::Partition}:glue:${AWS::Region}:${AWS::AccountId}:*/*",
										"Fn::Sub": "arn:${AWS::Partition}:glue:${AWS::Region}:${AWS::AccountId}:*"
									}
								},
								{
									"Effect": "Allow",
									"Action": [
										"s3:Get*",
										"s3:List*"
									],
									"Resource": {
										"Fn::Sub": "arn:${AWS::Partition}:s3:::*"
									}
								},
								{
									"Effect": "Allow",
									"Action": [
										"s3:PutObject"
									],
									"Resource": {
										"Fn::Sub": "arn:${AWS::Partition}:s3:::${S3PoCBucketName}",
										"Fn::Sub": "arn:${AWS::Partition}:s3:::${S3PoCBucketName}/*"
									}
								}
							]
						}
					}
				],
				"RoleName": {
          "Fn::Join": [
            "",
            [
              "SageMakerExecutionRole-",
              { 
                "Fn::Sub": "${InfrastructureID}-"
              },
              {
                "Ref": "AWS::Region"
              }
            ]
          ]
        },
        "Tags": [
          {
            "Key": "Environment",
            "Value": {
              "Fn::Sub": "${InfrastructureID}"
            }
          },
          {
            "Key": "auto-delete",
            "Value": "never"
          }
        ]
			}
		}
  },
  "Outputs": {
    "NeptuneLoadFromS3RoleARN": {
      "Description": "Neptune IAM role for loading data from S3",
      "Value": {
        "Fn::GetAtt": [
          "NeptuneLoadFromS3Role",
          "Arn"
        ]
      },
      "Export": {
        "Name": {
          "Fn::Sub": "${InfrastructureID}-NeptuneLoadFromS3RoleARN"
        }
      }
    },
    "NeptuneEC2InstanceProfile": {
      "Description": "Neptune EC2 instance profile",
      "Value": {
        "Ref": "NeptuneEC2InstanceProfile"
      },
      "Export": {
        "Name": {
          "Fn::Sub": "${InfrastructureID}-NeptuneEC2InstanceProfile"
        }
      }
    },
    "GlueRoleARN": {
			"Description": "Glue IAM role ARN",
			"Value": {
				"Fn::GetAtt": [
					"GlueRole",
					"Arn"
				]
			},
			"Export": {
				"Name": {
					"Fn::Sub": "${InfrastructureID}-GlueRoleARN"
				}
			}
		},
		"SageMakerExecutionRoleARN": {
			"Description": "SageMaker IAM execution role",
			"Value": {
				"Fn::GetAtt": [
					"SageMakerExecutionRole",
					"Arn"
				]
			},
			"Export": {
				"Name": {
					"Fn::Sub": "${InfrastructureID}-SageMakerExecutionRoleARN"
				}
			}
		}
  }
}