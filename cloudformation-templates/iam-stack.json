{
  "Description": "IAM resources for the Identity Graph PoC",
  "Parameters": {
    "InfrastructureID": {
      "Description": "Infrastructure ID",
      "Type": "String",
      "AllowedPattern": "[-a-z0-9]+",
      "MaxLength": 50,
      "Default": "poc-identity-graph"
    }
  },
  "Resources": {
    "NeptuneEC2ClientRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "ec2.amazonaws.com"
                ]
              },
              "Action": [
                "sts:AssumeRole"
              ]
            }
          ]
        },
        "RoleName": {
          "Fn::Join": [
            "",
            [
              "NeptuneEC2ClientRole-",
              { 
                "Fn::Sub": "${InfrastructureID}-"
              },
              {
                "Ref": "AWS::Region"
              }
            ]
          ]
        },
        "Tags": [
          {
            "Key": "Environment",
            "Value": "ab3"
          },
          {
            "Key": "auto-delete",
            "Value": "never"
          },
          {
            "Key": "CreatedBy",
            "Value": "chvezk"
          }
        ],
        "Path": "/"
      }
    },
    "NeptuneAccessPolicy": {
      "Type": "AWS::IAM::Policy",
      "Properties": {
        "PolicyName": { 
          "Fn::Sub": "NeptuneAccessPolicy-${InfrastructureID}"
        },
        "PolicyDocument": {
          "Statement": [
            {
              "Effect": "Allow",
              "Action": [
                "rds:*",
                "iam:GetAccountSummary",
                "iam:ListAccountAliases",
                "iam:PassRole"
              ],
              "Resource": "*"
            }
          ]
        },
        "Roles": [
          {
            "Ref": "NeptuneEC2ClientRole"
          }
        ]
      }
    },
    "NeptuneEC2InstanceProfile": {
      "Type": "AWS::IAM::InstanceProfile",
      "Properties": {
        "InstanceProfileName": {
          "Fn::Sub": "NeptuneEC2InstanceProfile-${InfrastructureID}"
        },
        "Path": "/",
        "Roles": [
          {
            "Ref": "NeptuneEC2ClientRole"
          }
        ]
      },
      "DependsOn": [
        "NeptuneEC2ClientRole"
      ]
    },
    "NeptuneIAMAuthPolicy": {
      "Type": "AWS::IAM::Policy",
      "Properties": {
        "PolicyName": {
          "Fn::Sub": "NeptuneIAMAuthPolicy-${InfrastructureID}"
        },
        "PolicyDocument": {
          "Statement": [
            {
              "Effect": "Allow",
              "Action": [
                "neptune-db:*"
              ],
              "Resource": {
                "Fn::Join": [
                  "",
                  [
                    "arn:aws:neptune-db:",
                    {
                      "Ref": "AWS::Region"
                    },
                    ":",
                    {
                      "Ref": "AWS::AccountId"
                    },
                    ":*/*"
                  ]
                ]
              }
            }
          ]
        },
        "Roles": [
          {
            "Ref": "NeptuneEC2ClientRole"
          }
        ]
      }
    },
    "NeptuneLoadFromS3Role": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "rds.amazonaws.com"
                ]
              },
              "Action": [
                "sts:AssumeRole"
              ]
            }
          ]
        },
        "RoleName": {
          "Fn::Join": [
            "",
            [
              "NeptuneLoadFromS3Role-",
              { 
                "Fn::Sub": "${InfrastructureID}-"
              },
              {
                "Ref": "AWS::Region"
              }
            ]
          ]
        },
        "Tags": [
          {
            "Key": "Environment",
            "Value": "ab3"
          },
          {
            "Key": "auto-delete",
            "Value": "never"
          },
          {
            "Key": "CreatedBy",
            "Value": "chvezk"
          }
        ],
        "Path": "/"
      }
    },
    "NeptuneLoadFromS3Policy": {
      "Type": "AWS::IAM::Policy",
      "Properties": {
        "PolicyName": {
          "Fn::Sub": "NeptuneLoadFromS3Policy-${InfrastructureID}"
        },
        "PolicyDocument": {
          "Statement": [
            {
              "Effect": "Allow",
              "Action": [
                "s3:Get*",
                "s3:List*"
              ],
              "Resource": "*"
            }
          ]
        },
        "Roles": [
          {
            "Ref": "NeptuneLoadFromS3Role"
          }
        ]
      }
    },
    "GlueRole": {
			"Type": "AWS::IAM::Role",
			"Properties": {
				"AssumeRolePolicyDocument": {
					"Version": "2012-10-17",
					"Statement": [
						{
							"Effect": "Allow",
							"Principal": {
								"Service": "glue.amazonaws.com"
							},
							"Action": "sts:AssumeRole"
						}
					]
				},
				"RoleName": {
          "Fn::Join": [
            "",
            [
              "GlueRole-",
              { 
                "Fn::Sub": "${InfrastructureID}-"
              },
              {
                "Ref": "AWS::Region"
              }
            ]
          ]
        },
				"ManagedPolicyArns": [
					"arn:aws:iam::aws:policy/AmazonS3FullAccess",
					"arn:aws:iam::aws:policy/service-role/AWSGlueServiceRole"
				],
				"Policies": [
					{
						"PolicyName": { 
						  "Fn::Sub": "GlueAssumeRolePolicy-${InfrastructureID}"
						},
						"PolicyDocument": {
							"Version": "2012-10-17",
							"Statement": [
								{
									"Effect": "Allow",
									"Action": "sts:AssumeRole",
									"Resource": {
										"Fn::Sub": "arn:${AWS::Partition}:iam::${AWS::AccountId}:role/GlueConnectToNeptuneRoleARN_*"
									}
								}
							]
						}
					}
				],
				"MaxSessionDuration": 43200
			}
		}
  },
  "Outputs": {
    "NeptuneLoadFromS3RoleARN": {
      "Description": "Neptune IAM role for loading data from S3",
      "Value": {
        "Fn::GetAtt": [
          "NeptuneLoadFromS3Role",
          "Arn"
        ]
      },
      "Export": {
        "Name": {
          "Fn::Sub": "${InfrastructureID}-NeptuneLoadFromS3RoleARN"
        }
      }
    },
    "NeptuneEC2InstanceProfile": {
      "Description": "Neptune EC2 instance profile",
      "Value": {
        "Ref": "NeptuneEC2InstanceProfile"
      },
      "Export": {
        "Name": {
          "Fn::Sub": "${InfrastructureID}-NeptuneEC2InstanceProfile"
        }
      }
    },
    "GlueRoleARN": {
			"Description": "Glue IAM role ARN",
			"Value": {
				"Fn::GetAtt": [
					"GlueRole",
					"Arn"
				]
			},
			"Export": {
				"Name": {
					"Fn::Sub": "${InfrastructureID}-GlueRoleARN"
				}
			}
		}
  }
}