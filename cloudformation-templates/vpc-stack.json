{
  "Description": "Amazon VPC for the Identity Graph PoC",
  "Parameters": {
    "InfrastructureID": {
      "Description": "Infrastructure ID",
      "Type": "String",
      "AllowedPattern": "[-a-z0-9]+",
      "MaxLength": 50,
      "Default": "poc-identity-graph"
    }
  },
  "Mappings": {
    "Networking": {
      "VPC": {
        "CIDR": "10.7.0.0/16"
      },
      "PublicSubnetOne": {
        "CIDR": "10.7.1.0/24"
      },
      "PublicSubnetTwo": {
        "CIDR": "10.7.2.0/24"
      },
      "PublicSubnetThree": {
        "CIDR": "10.7.3.0/24"
      },
      "PrivateSubnetOne": {
        "CIDR": "10.7.101.0/24"
      },
      "PrivateSubnetTwo": {
        "CIDR": "10.7.102.0/24"
      },
      "PrivateSubnetThree": {
        "CIDR": "10.7.103.0/24"
      }
    }
  },
  "Resources": {
    "VPC": {
      "Type": "AWS::EC2::VPC",
      "Properties": {
        "EnableDnsSupport": "true",
        "EnableDnsHostnames": "true",
        "CidrBlock": {
          "Fn::FindInMap": [
            "Networking",
            "VPC",
            "CIDR"
          ]
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": {
              "Fn::Sub": "vpc-${InfrastructureID}"
            }
          },
          {
            "Key": "Environment",
            "Value": "ab3"
          },
          {
            "Key": "auto-delete",
            "Value": "never"
          },
          {
            "Key": "CreatedBy",
            "Value": "chvezk"
          }
        ]
      }
    },
    "InternetGateway": {
      "Type": "AWS::EC2::InternetGateway",
      "Properties": {
        "Tags": [
          {
            "Key": "Name",
            "Value": {
              "Fn::Sub": "igw-${InfrastructureID}"
            }
          },
          {
            "Key": "Environment",
            "Value": "ab3"
          },
          {
            "Key": "auto-delete",
            "Value": "never"
          },
          {
            "Key": "CreatedBy",
            "Value": "chvezk"
          }
        ]
      }
    },
    "GatewayToInternet": {
      "Type": "AWS::EC2::VPCGatewayAttachment",
      "Properties": {
        "VpcId": {
          "Ref": "VPC"
        },
        "InternetGatewayId": {
          "Ref": "InternetGateway"
        }
      }
    },
    "NATGatewayOne": {
      "DependsOn": "GatewayToInternet",
      "Type": "AWS::EC2::NatGateway",
      "Properties": {
        "AllocationId": {
          "Fn::GetAtt": [
            "ElasticIPOne",
            "AllocationId"
          ]
        },
        "SubnetId": {
          "Ref": "PublicSubnetOne"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": {
              "Fn::Sub": "natgw-az1-${InfrastructureID}"
            }
          },
          {
            "Key": "Environment",
            "Value": "ab3"
          },
          {
            "Key": "auto-delete",
            "Value": "never"
          },
          {
            "Key": "CreatedBy",
            "Value": "chvezk"
          }
        ]
      }
    },
    "ElasticIPOne": {
      "Type": "AWS::EC2::EIP",
      "Properties": {
        "Domain": "vpc",
        "Tags": [
          {
            "Key": "Name",
            "Value": {
              "Fn::Sub": "eip-natgw-az1-${InfrastructureID}"
            }
          },
          {
            "Key": "Environment",
