    "VPCS3Endpoint": {
      "Type": "AWS::EC2::VPCEndpoint",
      "DependsOn": [
        "VPC"
      ],
      "Properties": {
        "RouteTableIds": [
          {
            "Ref": "PublicRouteTable"
          }
        ],
        "ServiceName": {
          "Fn::Join": [
            "",
            [
              "com.amazonaws.",
              {
                "Ref": "AWS::Region"
              },
              ".s3"
            ]
          ]
        },
        "VpcId": {
          "Ref": "VPC"
        },
        "PolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": "*",
              "Action": [
                "s3:*"
              ],
              "Resource": [
                "*"
              ]
            }
          ]
        },
        "VpcEndpointType": "Gateway"
      }
    },
    "NeptuneClientSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "DependsOn": [
        "VPC"
      ],
      "Properties": {
        "VpcId": {
          "Ref": "VPC"
        },
        "GroupDescription": "Allow Access",
        "SecurityGroupIngress": [
          {
            "FromPort": "22",
            "ToPort": "22",
            "IpProtocol": "tcp",
            "CidrIp": "0.0.0.0/0",
            "Description": "SSH from anywhere"
          },
          {
            "FromPort": "8182",
            "ToPort": "8182",
            "IpProtocol": "tcp",
            "CidrIp": "0.0.0.0/0",
            "Description": "HTTP access"
          }
        ],
        "Tags": [
          {
            "Key": "Name",
            "Value": {
              "Fn::Sub": "neptune-client-sg-${InfrastructureID}"
            }
          },
          {
            "Key": "Environment",
            "Value": "ab3"
          },
          {
            "Key": "auto-delete",
            "Value": "never"
          },
          {
            "Key": "CreatedBy",
            "Value": "chvezk"
          }
        ]
      }
    },
    "NeptuneSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "DependsOn": [
        "NeptuneClientSecurityGroup"
      ],
      "Properties": {
        "VpcId": {
          "Ref": "VPC"
        },
        "GroupDescription": "Allow Access",
        "SecurityGroupIngress": [
          {
            "FromPort": "22",
            "ToPort": "22",
            "IpProtocol": "tcp",
            "SourceSecurityGroupId": {
              "Ref": "NeptuneClientSecurityGroup"
            },
            "Description": "SSH from Neptune client security group"
          },
          {
            "FromPort": "8182",
            "ToPort": "8182",
            "IpProtocol": "tcp",
            "SourceSecurityGroupId": {
              "Ref": "NeptuneClientSecurityGroup"
            },
            "Description": "HTTP access from Neptune client security group"
          }
        ],
        "Tags": [
          {
            "Key": "Name",
            "Value": {
              "Fn::Sub": "neptune-db-sg-${InfrastructureID}"
            }
          },
          {
            "Key": "Environment",
