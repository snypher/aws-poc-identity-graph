      "Properties": {
        "Domain": "vpc",
        "Tags": [
          {
            "Key": "Name",
            "Value": {
              "Fn::Sub": "eip-natgw-az3-${InfrastructureID}"
            }
          },
          {
            "Key": "Environment",
            "Value": "ab3"
          },
          {
            "Key": "auto-delete",
